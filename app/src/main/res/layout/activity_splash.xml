<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:gravity="center">

    <!-- Logo centrado -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/deliciapp_round"
        android:layout_centerInParent="true"
        android:contentDescription="Logo DeliciApp" />

    <!-- Nombre de la app debajo -->
    <TextView
        android:id="@+id/tvNombreApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeliciApp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#D84315"
        android:layout_below="@id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- SubtÃ­tulo opcional -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comida casera al alcance de tu mano"
        android:textSize="16sp"
        android:textColor="#5D4037"
        android:layout_below="@id/tvNombreApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

</RelativeLayout>
