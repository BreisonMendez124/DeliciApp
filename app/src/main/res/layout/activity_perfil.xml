<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil de Usuario"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#D84315"
            android:layout_marginTop="40dp" />

        <ImageView
            android:id="@+id/imgUsuario"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            android:contentDescription="Foto de perfil"
            android:elevation="4dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/usericon_round" />

        <EditText
            android:id="@+id/etNombrePerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:backgroundTint="#D84315"
            android:padding="10dp"
            android:enabled="false" />


        <EditText
            android:id="@+id/etCorreoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:backgroundTint="#D84315"
            android:padding="10dp"
            android:enabled="false" />


        <EditText
            android:id="@+id/etDireccionPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Dirección de entrega"
            android:inputType="textPostalAddress"
            android:backgroundTint="#D84315"
            android:padding="10dp"
            android:enabled="false" />


        <Button
            android:id="@+id/btnEditarPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#D84315"
            android:layout_marginTop="30dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="#D84315"
            android:textStyle="bold"
            android:backgroundTint="#FFE0B2"
            android:layout_marginTop="15dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
